@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";

    eHR.PMS.Web.Helpers.Common.LogException(Model.Exception);
}
<h2 style="text-align:center;"><img src="@(Url.Content("~/Content/img/ops.png"))" width="5%" />An Error had occurred.</h2>
<div class="row" style="padding:20px 50px;">
  <div class="panel panel-default col-md-6 col-md-offset-3">    
    <p style="padding:20px;">
     An error had occurred. Please contact the IT Department. You can click on the 'Home' button at the top bar to return to the Home page.
    </p>
  </div>
</div>
